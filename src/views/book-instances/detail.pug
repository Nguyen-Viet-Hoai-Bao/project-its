extends ../layout

block content
  h1 #{bookinstance.id}

  p
    strong #{t('detail.book')}: 
    a(href=`/books/${bookinstance.book.id}`) #{bookinstance.book.title}

  p
    strong #{t('detail.imprint')}: 
    | #{bookinstance.imprint}

  p
    strong #{t('detail.status')}: 
    span(class=bookinstance.status.toLowerCase()) #{bookinstance.status}

  if bookinstance.status != BookInstanceStatus.AVAILABLE
    p
      strong #{t('detail.dueback')}: 
      | #{bookinstance.due_back}
